@model IEnumerable<WebAppCursos.Models.Curso>

@{
    ViewData["Title"] = "Curso";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Crear Nuevo Curso </a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descripcion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Creditos)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Horas)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Costo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Categoria)
            </th>
            
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Creditos)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Horas)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Costo)
            </td>
            <td>
                @{
                    if (item.Estado == true)
                    {
                        <span>Activo</span>
                    }
                    else
                    {
                        <span>Inactivo</span>
                    }
                }

            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Categoria.Nombre)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.CursoID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.CursoID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.CursoID">Delete</a>

                <a class="btn btn-success" data-toggle="tooltip" data-placement="top" title="editar" asp-action="Edit" asp-route-id="@item.CursoID"><i class="fas fa-edit"></i></a> |
                <a class="btn btn-primary" data-toggle="tooltip" data-placement="top" title="detalles" asp-action="Details" asp-route-id="@item.CursoID"><i class="fas fa-clipboard-list"></i></a> |
                <a class="btn btn-danger" data-toggle="tooltip" data-placement="top" title="eliminar" asp-action="Delete" asp-route-id="@item.CursoID"><i class="fas fa-times"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
