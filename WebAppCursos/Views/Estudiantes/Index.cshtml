@model IEnumerable<WebAppCursos.Models.Estudiante>

@{
    ViewData["Title"] = "Estudiante ";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Crear Nuevo Estudiante</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Codigp)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombres)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaNacimiento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Documento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telfono)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Direccion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estado)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Codigp)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombres)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaNacimiento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Documento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telfono)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Direccion)
            </td>
            <td>
                @{
                    if (item.Estado == true)
                    {
                        <span>Activo</span>
                    }
                    else
                    {
                        <span>Inactivo</span>
                    }
                }

            </td>
            <td>
              
                <a class="btn btn-success" data-toggle="tooltip" data-placement="top" title="editar" asp-action="Edit" asp-route-id="@item.ID"><i class="fas fa-edit"></i></a> |
                <a class="btn btn-primary" data-toggle="tooltip" data-placement="top" title="detalles" asp-action="Details" asp-route-id="@item.ID"><i class="fas fa-clipboard-list"></i></a> |
                <a class="btn btn-danger" data-toggle="tooltip" data-placement="top" title="eliminar" asp-action="Delete" asp-route-id="@item.ID"><i class="fas fa-times"></i></a>

            </td>
        </tr>
}
    </tbody>
</table>
