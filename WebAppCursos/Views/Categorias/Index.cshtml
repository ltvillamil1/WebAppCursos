@model IEnumerable<WebAppCursos.Models.Categoria>

@{
    ViewData["Title"] = "Categoria";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Crear nueva Categoria</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descripcion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estadp)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descripcion)
            </td>
            <td>
                @{
                    if (item.Estadp == true)
                    {
                        <span>Activo</span>
                    }
                    else
                    {
                        <span>Inactivo</span>
                    }
                }

            </td>
            <td>
                <a class="btn btn-success" data-toggle="tooltip" data-placement="top" title="editar" asp-action="Edit" asp-route-id="@item.CategoriaID"><i class="fas fa-edit"></i></a> |
                <a class="btn btn-primary" data-toggle="tooltip" data-placement="top" title="detalles" asp-action="Details" asp-route-id="@item.CategoriaID"><i class="fas fa-clipboard-list"></i></a> |
                <a class="btn btn-danger" data-toggle="tooltip" data-placement="top" title="eliminar" asp-action="Delete" asp-route-id="@item.CategoriaID"><i class="fas fa-times"></i></a>

                </td >

                </tr >
            }
</tbody>
</table>
